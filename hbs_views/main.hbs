<div class="container">

  <body>
    <form action="http://localhost:8080/" method="POST">
      <div class="card">
        <div class="card-header text-center" style="background-color: #f8f9c5">
          Carga de productos
        </div>
        <div class="card-body" style="background-color: #ffcef8">
          <div class="col-4">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="title" id="title" class="form-control" />
          </div>
          <div class="col-2">
            <label for="price" class="form-label">Price</label>
            <input type="input" name="price" id="price" class="form-control" aria-describedby="priceHelp" />
            <div id="priceHelp" class="form-text" style="color: red">*Price in
              dollars</div>
          </div>
          <div class="col-12">
            <label for="thumbnail">Thumbnail</label>
            <input type="input" name="thumbnail" id="thumbnail" class="form-control" />
          </div>
          <div class="card-footer text-center">
            <button class="btn btn-primary text-center" type="submit">Agregar</button>
          </div>
        </div>
      </div>
    </form>

  <table class="table table-success table-striped-columns">
    <tbody>
        {{#each productos}}
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>$ {{price}}</td>
            <td><img style="width: 50px; height:50px" src={{thumbnail}} alt=""></td>
        </tr>
        {{/each}}
    </tbody>
</table>

  </body>

  <body>
    <div id="products"></div>
  </body>

  <body>
    <form onsubmit="return enviarMensaje()">
      <div class="card">
        <div class="card-header text-center" style="background-color: #f8f9c5">
          Centro de Mensajes
        </div>
        
        <div class="card-body" style="background-color: #ffcef8">
          <div class="col-2">
            <label for="nombre" class="form-label">Email</label>
            <input type="text" name="nombre" id="nombre" required class="form-control"/>
          </div>
          <div class="col-6">
            <label for="mensaje" class="form-label">Message</label>
            <input type="text" name="mensaje" id="mensaje" required class="form-control"/>
          </div>
          <div class="card-footer text-center">
            <button class="btn btn-primary text-center" type="submit">Enviar Mensaje</button>
          </div>
        </div>
    </form>
  <div id="messages"></div>

  <div><br>HISTORIAL DE MENSAJES</div>
  <div><br></div>
      <table class="table table-success table-striped-columns">
    <tbody>
        {{#each mensajes}}
        <tr>
            <td>Nombre: {{nombre}}</td>
            <td>Mensaje: {{mensaje}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
  </body>
</div>